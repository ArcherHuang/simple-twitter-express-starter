<h1>tweet後台</h1>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/admin/tweets">tweet</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/admin/users">User</a>
  </li>
</ul>

<br />
<div class="text-light">
  <table class="table table-striped table-bordered  table-dark" id="users-table" cellspacing="0" width="100%">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">user</th>
        <th scope="col" class="text-center">tweets</th>
        <th scope="col" class="text-center">followings</th>
        <th scope="col" class="text-center">followers</th>
        <th scope="col" class="text-center">likes</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td class="text-center"><span class="badge badge-primary ml-3">{{this.Tweets.length}}</span></td>
        <td class="text-center"><span class="badge badge-primary ml-3">{{this.Followings.length}}</span></td>
        <td class="text-center"><span class="badge badge-primary ml-3">{{this.Followers.length}}</span></td>
        <td class="text-center"><span class="badge badge-primary ml-3">{{this.Likes.length}}</span></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script type="text/javascript" src="/javascripts/datatables.js"></script>